{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "target": "ES2021",
    "module": "NodeNext",
    "lib": [
      "ES2023", "dom"
    ],
    "moduleResolution": "NodeNext",
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "strict": true,
  }
}